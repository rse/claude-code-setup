{
    "defaultMode":                  "acceptEdits",
    "disableBypassPermissionsMode": "disable",
    "verbose":                      true,
    "permissions": {
        "allow": [
            "Bash(ls:*)",
            "Bash(git diff:*)",
            "Bash(git log:*)",
            "Bash(npm install)",
            "Bash(npm start lint)",
            "Bash(npm start build)",
            "Bash(npm start test)",
            "Read(./dst*)",
            "Bash(curl:*)",
            "Bash(wget:*)",
            "WebFetch",
            "WebSearch",
            "mcp__chat-openai-chatgpt",
            "mcp__chat-google-gemini",
            "mcp__chat-alibaba-qwen",
            "mcp__chat-deepseek",
            "mcp__chat-microsoft-phi",
            "mcp__chat-xai-grok"
        ],
        "ask": [
            "Write",
            "Edit",
            "MultiEdit"
        ],
        "deny": [
            "Read(./.env)"
        ]
    },
    "env": {
        "DISABLE_TELEMETRY":           "1",
        "DISABLE_AUTOUPDATER":         "1",
        "DISABLE_BUG_COMMAND":         "1",
        "DISABLE_ERROR_REPORTING":     "1"
    }
}
