{
  "env": {
    "DISABLE_TELEMETRY": "1",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1"
  },
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(date:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git tag:list:*)",
      "Bash(npm install)",
      "Bash(npm start lint)",
      "Bash(npm start build)",
      "Bash(npm start test)",
      "Bash(npm test)",
      "Bash(npm show)",
      "Bash(npm view)",
      "Read(./dst*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "WebFetch",
      "WebSearch",
      "mcp__chat-openai-chatgpt",
      "mcp__chat-google-gemini",
      "mcp__chat-alibaba-qwen",
      "mcp__chat-deepseek",
      "mcp__chat-microsoft-phi",
      "mcp__chat-xai-grok",
      "mcp__github",
      "mcp__ref",
      "mcp__exa",
      "mcp__brave"
    ],
    "deny": [
      "Read(./.env)"
    ],
    "ask": [
      "Write",
      "Edit",
      "MultiEdit"
    ]
  },
  "model": "opusplan",
  "statusLine": {
    "type": "command",
    "command": "ccstatusline",
    "padding": 1
  },
  "alwaysThinkingEnabled": true,
  "defaultMode": "acceptEdits",
  "disableBypassPermissionsMode": "disable",
  "spinnerTipsEnabled": false,
  "verbose": false
}
